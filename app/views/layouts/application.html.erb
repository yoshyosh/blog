<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<header>
	<div id="headerbox">
		<%= gravatar_image_tag 'janderson760@gmail.com' %>
		
		<nav id="topnav">
			<ul>
				<li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'About', '#' %></li>
				<li><%= link_to 'Projects', '#' %></li>
				<li><%= link_to 'Contact', '#' %></li>
			</ul>
		</nav>
		<div id="mediaicons">
			<%= link_to image_tag("facebook.png", :alt => "facebook"), "http://www.facebook.com/yoshyosh" %>
			<%= link_to image_tag("twitter.png", :alt => "twitter"), 'http://www.twitter.com/Anderson760' %>
			<%= link_to image_tag("github.png", :alt => "github"), 'http://www.github.com/yoshyosh' %>
			<%= link_to image_tag("skype.png", :alt => "skype"), 'yoshyosh18' %>
			<%= link_to image_tag("linkedin.png", :alt => "linkedin") %>
		</div>
	</div>
	</header>
		<div id="content">
		<section>
		<% flash.each do |key, value| %>
			<div class="<%= key %>"><%= value %></div>
		<% end %>
			<%= yield %>
		</section>
		</div>
	</div>
</body>
</html>
